<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_treatment_form" model="ir.ui.view">
            <field name="name">dentist.treatment.form</field>
            <field name="model">dentist.treatment</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="duration"/>
                        <field name="cost"/>
                        <field name="notes"/>

                        <!-- Display images of associated teeth -->
                        <field name="tooth_ids" widget="many2many_tags" options="{'no_create_edit': True}">
                            <tree>
                                <field name="image" widget="image" options="{'size': [70, 120]}"/>
                                <field name="name"/>
                                <field name="universal_number"/>
                                <field name="tooth_type"/>
                                <field name="position"/>
                            </tree>
                        </field>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_treatment_tree" model="ir.ui.view">
            <field name="name">dentist.treatment.tree</field>
            <field name="model">dentist.treatment</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="tooth_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>


        <record id="action_dentist_treatment" model="ir.actions.act_window">
            <field name="name">treatment</field>
            <field name="res_model">dentist.treatment</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_treatment" name="Treatment" parent="menu_dentist_root_menu"
                  action="action_dentist_treatment"/>
    </data>
</odoo>